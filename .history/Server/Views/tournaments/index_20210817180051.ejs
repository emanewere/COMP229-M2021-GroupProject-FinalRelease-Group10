<%- include('../partials/header.ejs'); %>
<div id="grad1">
    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-1 col-md-10">
          <h3 style="font-family:verdana; color:white">Your tournaments </h3>
          <!-- ------------------------ -->
          <!-- THE ADD BUTTON HAS BEEN FIXED -->
          <!-- ------------------------ -->
          <% if(displayName) { %>
          <a href="/tournaments/add" class="btn btn-primary"><i class="fa fa-plus"></i> Create a tournament</a>
          <% } %>
          <br>
          <br>
          <div style="font-family:Georgia,serif;height:400px;" class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
              <thead>
                <tr>
                  <th style="color:#D2691E" class="text-center">Name</th>
                  <th style="color:#D2691E" class="text-center">Date</th>
                  <th style="color:#D2691E" class="text-center">Brief description</th>
                  <% if(displayName) { %>
                  <th class="text-center"></th>
                  <th class="text-center"></th>
                  <th class="text-center"></th>
                  <th class="text-center"></th>
                   <% } %>
                </tr>
                </thead>
                <tbody>
                <!-- Template Row -->
                <% for (let count = 0; count < tournaments.length; count++) { %>
                <% if(userName === tournaments[count].UserName ) { %>
                <tr style="background-color:	#D2B48C">
                  <td><%= tournaments[count].Name %></td>
                  <td style="background-color:	#D2B48C" class="text-center"><%= tournaments[count].StartDate %></td>
                  <td style="background-color:	#D2B48C" class="text-center"><%= tournaments[count].Description %></td>
                  
                  <td style="background-color:	#D2B48C" class="text-center">
                    <!-- ------------------------ -->
                    <!-- EDIT BUTTON HAS BEEN ADDED HERE -->
                    <!-- ------------------------ -->
                    <% if(displayName) { %>
                    <td class="text-center"><a href="/tournaments/<%= tournaments[count]._id %>" class="btn btn-primary btn-sm edit"><i class="fas fa-edit fa-sm"></i>View or Update</a></td>
                    <% } %>
                  </td>
                  

                  
                  <td class="text-center">
                    <!-- ------------------------ -->
                    <!-- DELETE BUTTON HAS BEEN ADDED HERE -->
                    <!-- ------------------------ -->
                    <% if(displayName) { %>
                    <td class="text-center"><a href="/tournaments/delete/<%= tournaments[count]._id %>" class="btn btn-danger btn-sm delete"><i class="fas fa-trash-alt fa-sm"></i> Delete</a></td>
                    <% } %>
                  </td>
                </tr>
                <% } %>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
</div>
<%- include('../partials/footer.ejs'); %>


